repository:
  string_escaped_char:
    patterns:
    - name: constant.character.escape.gotemplate
      match: \\(\\|[abfnrtv'"]|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4}|U[0-9a-fA-F]{8}|[0-7]{3})
